generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  image       String?
  tags        PostTag[]
  date        DateTime   @default(now())
  createdBy   User       @relation("UserCreatedPosts", fields: [createdById], references: [id])
  createdById Int
  likedBy     PostLike[] @relation("PostLikedBy")
}

model Tag {
  id    Int       @id @default(autoincrement())
  name  String    @unique
  posts PostTag[]
}

model PostTag {
  post   Post @relation(fields: [postId], references: [id])
  postId Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  tagId  Int

  @@id([postId, tagId])
}

model User {
  id           Int        @id @default(autoincrement())
  firstName    String
  secondName   String?
  email        String     @unique
  avatar       String?
  password     String
  isAdmin      Boolean    @default(false)
  createdPosts Post[]     @relation("UserCreatedPosts")
  likedPosts   PostLike[] @relation("UserLikedPosts")
}

model PostLike {
  user   User @relation("UserLikedPosts", fields: [userId], references: [id])
  userId Int
  post   Post @relation("PostLikedBy", fields: [postId], references: [id])
  postId Int

  @@id([userId, postId])
}